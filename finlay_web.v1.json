{
  "openapi": "3.0.0",
  "info": {
    "title": "finlay_web",
    "version": "1.0",
    "contact": {
      "name": "Khiem Cong",
      "email": "congnghiakhiem@gmail.com"
    },
    "description": "API for web client"
  },
  "servers": [
    {
      "url": "http://localhost:3000/web"
    }
  ],
  "paths": {
    "/user/register": {
      "post": {
        "summary": "",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "message": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "uid": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "code",
                    "message"
                  ]
                },
                "examples": {
                  "1: success": {
                    "value": {
                      "code": 1,
                      "message": "OK",
                      "uid": "user_id",
                      "token": "token"
                    }
                  },
                  "-11: username or phone number is existed": {
                    "value": {
                      "code": -11,
                      "message": "Username or Phone number is existed"
                    }
                  },
                  "-12: username is illegal": {
                    "value": {
                      "code": -12,
                      "message": "Username is illegal"
                    }
                  },
                  "-99: exception": {
                    "value": {
                      "code": -99,
                      "message": "Exception"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "public"
        ],
        "description": "Register new user\n- Username: NationID (CMND, CCCD)\n- Password: MD5 enrypted\n- Cellphone number: 84xxxxxxx\n",
        "operationId": "post_user_register",
        "security": [
          {
            "apikey1": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "NationID (CMND, CCCD)"
                  },
                  "password": {
                    "type": "string",
                    "description": "MD5 encrypted"
                  },
                  "phone_no": {
                    "type": "string",
                    "description": "/((849|843|847|848|845)+([0-9]{8})\\b)/g"
                  }
                },
                "required": [
                  "username",
                  "password",
                  "phone_no"
                ]
              },
              "examples": {
                "example-1": {
                  "value": {
                    "username": "012340693",
                    "password": "MD5 encrypted",
                    "phone_no": "84902211560"
                  }
                }
              }
            },
            "application/xml": {
              "schema": {
                "type": "object",
                "properties": {}
              }
            }
          },
          "description": ""
        }
      }
    },
    "/user/verify/phone": {
      "post": {
        "summary": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "security": [
          {
            "apikey1": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "token"
          }
        ]
      },
      "parameters": []
    },
    "/user/login": {
      "post": {
        "summary": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "security": [
          {
            "apikey1": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "client_ip": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "operationId": "post_user_login",
        "description": "User login:\n- username: CMND or CCCD\n- password: MD5 encrypted\n- client_ip:"
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apikey1": {
        "name": "key",
        "type": "apiKey",
        "in": "query"
      }
    },
    "schemas": {}
  }
}